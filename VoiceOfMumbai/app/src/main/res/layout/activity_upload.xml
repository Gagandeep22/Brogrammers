<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".UploadActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine|textPersonName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp" />

    <Button
        android:id="@+id/addImageButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/descriptionEditText"
        android:layout_marginEnd="21dp"
        android:text="Add Image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="286dp"
        android:layout_height="138dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/descriptionEditText"
        android:layout_marginBottom="140dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_alignLeft="@+id/descriptionEditText" />

    <Button
        android:id="@+id/uploadPostButton"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp"
        android:layout_marginStart="78dp"
        android:text="Post"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="78dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="68dp"
        android:text="Enter your Grievance"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="27dp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uploadPostButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/uploadPostButton"
        android:layout_marginTop="16dp"
        android:text="TextView" />
</RelativeLayout>